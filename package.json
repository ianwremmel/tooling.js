{
  "name": "@ianwremmel/tooling.js",
  "version": "0.0.0-development",
  "license": "MIT",
  "main": "src/transform.js",
  "bin": {
    "tooling": "bin/tooling"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ianwremmel/tooling.js.git"
  },
  "scripts": {
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "mocha ./test/*/spec/**/*.js",
    "posttest": "npm run test:lint",
    "test:lint": "eslint src test --ignore-pattern test/integration/fixtures",
    "lint:staged": "lint-staged",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:js": "npm run --silent lint:eslint -- --ignore-pattern test/integration/fixtures .",
    "lint": "npm run --silent lint:js"
  },
  "dependencies": {
    "babel-core": "^6.20.0",
    "babel-preset-env": "1.6.1",
    "babel-register": "^6.18.0",
    "babel-template": "^6.16.0",
    "mkdirp": "^0.5.1",
    "mz": "^2.6.0",
    "shelljs": "^0.8.1"
  },
  "devDependencies": {
    "@ianwremmel/eslint-config": "^2.0.1",
    "babel-eslint": "^8.0.3",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "condition-circle": "^2.0.0",
    "eslint": "^4.13.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-mocha": "^4.8.0",
    "eslint-plugin-react": "^7.1.0",
    "lint-staged": "^7.0.0",
    "mocha": "^5.0.1",
    "pre-commit": "^1.2.2",
    "semantic-release": "^11.0.2",
    "sinon": "4.4.7"
  },
  "engines": {
    "node": ">=6.x"
  },
  "lint-staged": {
    "*.js": "lint:eslint"
  },
  "pre-commit": "lint:staged",
  "release": {
    "verifyConditions": [
      "condition-circle"
    ]
  }
}
